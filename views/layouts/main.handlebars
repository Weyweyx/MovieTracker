<html lang="en">

<head>

  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Movie Tracker</title>
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.6.2/css/bulma.min.css" />
  <script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
  <link href="https://vjs.zencdn.net/8.16.1/video-js.css" rel="stylesheet" />
</head>

<body>
  <section class="section">
    <div class="container">
      <header class="custom-picture-title">
        <h1 class="title has-text-black is-2" id="underlined">The Ultimate Movie Tracker</h1>
      </header>
      <nav class="level">
        <div class="level-left">
          {{#if logged_in}}
          <a href="/profile" class="button is-info" type="submit">Profile</a>
          <button id="logout-form" class="button is-danger ml-2" type="submit">Logout</button>
          {{else}}
          <div class="field is-grouped">
            <p class="control subtitle content"><strong class="has-text-black is-size-5" id="underlined">Already have an
                account? Sign in
                here!</strong> ðŸ‘‰</p>
            <a href="/login" class="button is-link is-rounded ml-2" type="submit">Login</a>
          </div>
          {{/if}}
        </div>
      </nav>
      </header>
      <main class="content">
        {{{body}}}
      </main>
      <footer class="footer mt-5" id="foot-custom">
        <div class="content" id="underlined">
          <p><strong class="has-text-black">&copy; 2024 Movie Tracker. All rights reserved.</strong></p>
        </div>
      </footer>
    </div>
  </section>

  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>